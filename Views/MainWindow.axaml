<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:SdkMigrator.Views"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="SdkMigrator.Views.MainWindow"
        Title="SDK Migrator"
        Width="1200"
        Height="800"
        MinWidth="900"
        MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="#FAFBFC"
        TransparencyBackgroundFallback="#FAFBFC"
        Icon="/Assets/icon.ico"
        CanResize="true">

    <!-- Modern gradient background -->
    <Panel>
        <Border Background="White">
            <Border.OpacityMask>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#F8FAFC" Offset="1"/>
                </LinearGradientBrush>
            </Border.OpacityMask>
        </Border>
        
        <!-- Subtle decorative gradient overlay -->
        <Border Background="White">
            <Border.OpacityMask>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#FAFBFC" Offset="0"/>
                    <GradientStop Color="#F1F5F9" Offset="1"/>
                </LinearGradientBrush>
            </Border.OpacityMask>
        </Border>
        
        <!-- Main content -->
        <views:MainView/>
    </Panel>
</Window>