<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SdkMigrator.ViewModels"
             xmlns:views="using:SdkMigrator.Views"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="SdkMigrator.Views.MainView"
             x:DataType="vm:MainViewModel">

    <Panel>
        <Grid RowDefinitions="Auto,*">
        <!-- Modern Header with Navigation -->
        <Border Grid.Row="0" 
                Background="White"
                BoxShadow="0 1 3 0 #1A000000, 0 1 2 0 #0F000000"
                Padding="0">
            <Grid RowDefinitions="Auto,Auto">
                <!-- App Title Bar -->
                <Border Grid.Row="0" 
                        Background="White"
                        Padding="24,16">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                            <!-- App Icon placeholder -->
                            <Border Width="32" Height="32" 
                                    Background="#0EA5E9" 
                                    CornerRadius="8"
                                    VerticalAlignment="Center">
                                <TextBlock Text="SM" 
                                           FontWeight="Bold" 
                                           FontSize="14" 
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="SDK Migrator" 
                                           FontSize="20" 
                                           FontWeight="Bold" 
                                           Foreground="#1F2937"/>
                                <TextBlock Text="Modernize your .NET projects with ease" 
                                           FontSize="12" 
                                           Foreground="#6B7280"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Version info -->
                        <TextBlock Grid.Column="2" 
                                   Text="v2.0" 
                                   FontSize="12" 
                                   Foreground="#9CA3AF"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                
                <!-- Navigation Tabs -->
                <Border Grid.Row="1" 
                        Background="#F8FAFC"
                        Padding="24,0">
                    <TabControl SelectedIndex="{Binding SelectedTabIndex}"
                                BorderThickness="0"
                                Background="Transparent">
                        <TabControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8"/>
                            </ItemsPanelTemplate>
                        </TabControl.ItemsPanel>
                        
                        <TabItem Header="Migration" />
                        <TabItem Header="Rollback" />
                        <TabItem Header="Analysis" />
                        <TabItem Header="Clean Dependencies" />
                        <TabItem Header="Clean CPM" />
                    </TabControl>
                </Border>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Border Grid.Row="1" Background="Transparent">
            <ContentControl Content="{Binding CurrentViewModel}" Margin="24">
                <ContentControl.DataTemplates>
                    <DataTemplate DataType="{x:Type vm:MigrationViewModel}">
                        <views:MigrationView />
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:RollbackViewModel}">
                        <views:RollbackView />
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:AnalysisViewModel}">
                        <views:AnalysisView />
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:CleanDepsViewModel}">
                        <views:CleanDepsView />
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:CleanCpmViewModel}">
                        <views:CleanCpmView />
                    </DataTemplate>
                </ContentControl.DataTemplates>
            </ContentControl>
        </Border>
    </Grid>
    </Panel>
</UserControl>