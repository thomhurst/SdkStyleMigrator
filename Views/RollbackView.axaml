<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SdkMigrator.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="SdkMigrator.Views.RollbackView"
             x:DataType="vm:RollbackViewModel">
    
    <Grid RowDefinitions="Auto,*" Margin="20">
        <!-- Header -->
        <TextBlock Text="Rollback Migration" 
                   Classes="PageTitle" 
                   Grid.Row="0" 
                   Margin="0,0,0,20"/>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">
                <!-- Directory Selection Card -->
                <Border Classes="Card">
                    <StackPanel Spacing="15">
                        <TextBlock Text="Backup Directory" Classes="SectionTitle"/>
                        <TextBlock Text="Select the directory containing the backup sessions"
                                   TextWrapping="Wrap"
                                   Foreground="#64748B"/>
                        
                        <Grid ColumnDefinitions="*,Auto" Classes="InputGroup">
                            <TextBox Grid.Column="0" 
                                     Text="{Binding DirectoryPath}"
                                     Watermark="C:\Projects\MyApp"
                                     Classes="ModernTextBox"/>
                            <Button Grid.Column="1" 
                                    Command="{Binding BrowseDirectoryCommand}"
                                    Classes="SecondaryButton"
                                    Content="Browse"
                                    Margin="8,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Backup Sessions Card -->
                <Border Classes="Card" IsVisible="{Binding BackupSessions.Count}">
                    <StackPanel Spacing="15">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0" Text="Available Backup Sessions" Classes="SectionTitle"/>
                            <Button Grid.Column="1" 
                                    Command="{Binding RefreshSessionsCommand}"
                                    Classes="LinkButton"
                                    Content="Refresh"/>
                        </Grid>
                        
                        <ListBox ItemsSource="{Binding BackupSessions}"
                                 SelectedItem="{Binding SelectedSession}"
                                 MaxHeight="300"
                                 BorderBrush="#E5E7EB"
                                 BorderThickness="1"
                                 CornerRadius="4">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Classes="SelectableItem" 
                                            Padding="12"
                                            Margin="0,2">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <StackPanel Grid.Column="0" Spacing="4">
                                                <TextBlock Text="{Binding DisplayName}" 
                                                           FontWeight="Medium"/>
                                                <TextBlock Text="{Binding BackupPath}" 
                                                           FontSize="12"
                                                           Foreground="#64748B"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding FileCount, StringFormat='{}{0} files'}"
                                                       Foreground="#64748B"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
                
                <!-- Status and Action -->
                <Border Classes="Card">
                    <StackPanel Spacing="15">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Grid.Column="0" Spacing="5">
                                <TextBlock Text="Status" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding StatusMessage}" 
                                           Foreground="#64748B"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                            
                            <Button Grid.Column="1"
                                    Command="{Binding RunRollbackCommand}"
                                    Classes="PrimaryButton"
                                    IsVisible="{Binding !IsRunning}"
                                    HorizontalAlignment="Right"
                                    Width="120">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <PathIcon Data="{StaticResource arrow_uturn_left_regular}" 
                                              Height="16" Width="16"/>
                                    <TextBlock Text="Rollback"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                        
                        <!-- Progress Bar -->
                        <ProgressBar IsIndeterminate="True" 
                                     IsVisible="{Binding IsRunning}"
                                     Height="4"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>