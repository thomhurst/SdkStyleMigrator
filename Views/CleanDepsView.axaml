<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SdkMigrator.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="SdkMigrator.Views.CleanDepsView"
             x:DataType="vm:CleanDepsViewModel">
    
    <Grid RowDefinitions="Auto,*" Margin="20">
        <!-- Header -->
        <TextBlock Text="Clean Transitive Dependencies" 
                   Classes="PageTitle" 
                   Grid.Row="0" 
                   Margin="0,0,0,20"/>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">
                <!-- Directory Selection Card -->
                <Border Classes="Card">
                    <StackPanel Spacing="15">
                        <TextBlock Text="Solution Directory" Classes="SectionTitle"/>
                        <TextBlock Text="Select the directory containing SDK-style projects to clean"
                                   TextWrapping="Wrap"
                                   Foreground="#64748B"/>
                        
                        <Grid ColumnDefinitions="*,Auto" Classes="InputGroup">
                            <TextBox Grid.Column="0" 
                                     Text="{Binding DirectoryPath}"
                                     Watermark="C:\Projects\MySolution"
                                     Classes="ModernTextBox"/>
                            <Button Grid.Column="1" 
                                    Command="{Binding BrowseDirectoryCommand}"
                                    Classes="SecondaryButton"
                                    Content="Browse"
                                    Margin="8,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Options Card -->
                <Border Classes="Card">
                    <StackPanel Spacing="15">
                        <TextBlock Text="Cleanup Options" Classes="SectionTitle"/>
                        
                        <CheckBox IsChecked="{Binding DryRun}">
                            <StackPanel Spacing="4">
                                <TextBlock Text="Dry Run Mode" FontWeight="Medium"/>
                                <TextBlock Text="Preview changes without modifying files"
                                           FontSize="12"
                                           Foreground="#64748B"/>
                            </StackPanel>
                        </CheckBox>
                        
                        <CheckBox IsChecked="{Binding ConservativeMode}">
                            <StackPanel Spacing="4">
                                <TextBlock Text="Conservative Mode" FontWeight="Medium"/>
                                <TextBlock Text="Only remove packages when versions match exactly (safer)"
                                           FontSize="12"
                                           Foreground="#64748B"/>
                            </StackPanel>
                        </CheckBox>
                    </StackPanel>
                </Border>
                
                <!-- Action and Status Card -->
                <Border Classes="Card">
                    <StackPanel Spacing="15">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Grid.Column="0" Spacing="5">
                                <TextBlock Text="Status" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding StatusMessage}" 
                                           Foreground="#64748B"
                                           TextWrapping="Wrap"/>
                                <TextBlock IsVisible="{Binding TotalRemoved}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="Removed {0} transitive dependencies">
                                            <Binding Path="TotalRemoved"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                            
                            <Button Grid.Column="1"
                                    Command="{Binding RunCleanupCommand}"
                                    Classes="PrimaryButton"
                                    IsVisible="{Binding !IsRunning}"
                                    HorizontalAlignment="Right">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <PathIcon Data="{StaticResource broom_regular}" 
                                              Height="16" Width="16"/>
                                    <TextBlock Text="Clean Dependencies"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                        
                        <!-- Progress Bar -->
                        <ProgressBar IsIndeterminate="True" 
                                     IsVisible="{Binding IsRunning}"
                                     Height="4"/>
                    </StackPanel>
                </Border>
                
                <!-- Output Log Card -->
                <Border Classes="Card" IsVisible="{Binding LogMessages.Count}">
                    <StackPanel Spacing="15">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0" Text="Cleanup Log" Classes="SectionTitle"/>
                            <Button Grid.Column="1" 
                                    Command="{Binding ClearLogsCommand}"
                                    Classes="LinkButton"
                                    Content="Clear"/>
                        </Grid>
                        
                        <Border Background="#F8FAFC" 
                                BorderBrush="#E5E7EB" 
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="10"
                                MaxHeight="300">
                            <ListBox ItemsSource="{Binding LogMessages}"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     Background="Transparent"
                                     BorderThickness="0">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel />
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" 
                                                   FontFamily="Consolas,Cascadia Code,monospace"
                                                   FontSize="12"
                                                   Margin="0,1"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.Styles>
                                    <Style Selector="ListBoxItem">
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="MinHeight" Value="0"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                    <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Style>
                                    <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                    </Style>
                                </ListBox.Styles>
                            </ListBox>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>